{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "release",
      "displayName": "Release",
      "generator": "Ninja",
      "binaryDir": "build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "QEEG_BUILD_TESTS": "ON"
      }
    },
    {
      "name": "lto-release",
      "displayName": "Release (LTO)",
      "generator": "Ninja",
      "binaryDir": "build/lto-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "QEEG_BUILD_TESTS": "ON",
        "QEEG_ENABLE_IPO": "ON"
      }
    },
    {
      "name": "package-release",
      "displayName": "Package (Release)",
      "generator": "Ninja",
      "binaryDir": "build/package-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "QEEG_BUILD_TESTS": "OFF",
        "QEEG_BUILD_CLI": "ON"
      }
    },
    {
      "name": "docs",
      "displayName": "Docs (Doxygen)",
      "generator": "Ninja",
      "binaryDir": "build/docs",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "QEEG_BUILD_TESTS": "OFF",
        "QEEG_BUILD_CLI": "OFF",
        "QEEG_BUILD_DOCS": "ON"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug",
      "generator": "Ninja",
      "binaryDir": "build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "QEEG_BUILD_TESTS": "ON"
      }
    },
    {
      "name": "asan",
      "displayName": "ASan/UBSan (Debug)",
      "generator": "Ninja",
      "binaryDir": "build/asan",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "QEEG_BUILD_TESTS": "ON",
        "QEEG_ENABLE_SANITIZERS": "ON"
      }
    },
    {
      "name": "shared-release",
      "displayName": "Shared Release",
      "generator": "Ninja",
      "binaryDir": "build/shared-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_SHARED_LIBS": "ON",
        "QEEG_BUILD_TESTS": "ON"
      }
    },
    {
      "name": "shared-debug",
      "displayName": "Shared Debug",
      "generator": "Ninja",
      "binaryDir": "build/shared-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_SHARED_LIBS": "ON",
        "QEEG_BUILD_TESTS": "ON"
      }
    },
    {
      "name": "tidy",
      "displayName": "clang-tidy (Analysis)",
      "generator": "Ninja",
      "binaryDir": "build/tidy",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "QEEG_BUILD_TESTS": "OFF",
        "QEEG_BUILD_CLI": "OFF",
        "QEEG_ENABLE_CLANG_TIDY": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "release",
      "configurePreset": "release"
    },
    {
      "name": "lto-release",
      "configurePreset": "lto-release"
    },
    {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "asan",
      "configurePreset": "asan"
    },
    {
      "name": "shared-release",
      "configurePreset": "shared-release"
    },
    {
      "name": "shared-debug",
      "configurePreset": "shared-debug"
    },
    {
      "name": "package-release",
      "configurePreset": "package-release"
    },
    {
      "name": "docs",
      "configurePreset": "docs",
      "targets": [
        "docs"
      ]
    },
    {
      "name": "tidy",
      "configurePreset": "tidy"
    }
  ],
  "testPresets": [
    {
      "name": "release",
      "configurePreset": "release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "lto-release",
      "configurePreset": "lto-release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "debug",
      "configurePreset": "debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "asan",
      "configurePreset": "asan",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "shared-release",
      "configurePreset": "shared-release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "shared-debug",
      "configurePreset": "shared-debug",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
